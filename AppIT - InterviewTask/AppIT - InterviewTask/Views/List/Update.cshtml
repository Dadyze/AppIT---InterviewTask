
@model AppIT___InterviewTask.Models.FinancialItem

@{
    ViewBag.Title = "Update";
}

<h2>Update</h2>

<form id="frm" method="post">
    <h3>Enter Values:</h3>
    <input type="hidden" name=id value=@Model.PartnerID />
    <div class="form-group">
        <label for="date">Date</label>
        <input type="datetime" class="form-control w-25" name=date value=@Model.Date/>
    </div>
    <div class="form-group">
        <label for="Amount">Amount</label>
        <input type="number" class="form-control w-25" name=Amount value=@Model.Amount />
    </div>

    <input type="submit" class=" w-25 btn-info mb-2 mt-2" />

    <hr />
</form>
<div>
    @Html.ActionLink("Back to List", "GetList")
</div>

